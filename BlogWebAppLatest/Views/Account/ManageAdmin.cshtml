@model IEnumerable<BlogWebApp.Models.IdentityModel.User>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin";
}

<div class="pagetitle">
    <h1> Admins </h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item">Admin</li>
            <li class="breadcrumb-item active">ManageAdmin</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p>
                        <a asp-action="/AddAdmin">Add Admin</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>SN</th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                               @*  <th>
                                    @Html.DisplayNameFor(model => model.CreatedAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedAt)
                                </th> *@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var count = 0;
                            }
                            @foreach (var item in Model)
                            {
                                count++;

                                <tr>
                                    <td> @count</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DisplayName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                  @*   <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedAt)
                                    </td> *@
                                    <td>
                                        <a asp-action="Edit" class="btn btn-success btn-sm"  title="Edit Category"  asp-route-id="@item.Id"> <i class="bi bi-pencil"></i></a> |
                                        <a asp-action="Details" class="btn btn-info btn-sm"  title="Details"  asp-route-id="@item.Id"><i class="bi bi-info"></i></a> |
                                        <a asp-action="Delete" class="btn btn-danger btn-sm"  title="Remove Category" asp-route-id="@item.Id"> <i class="bi bi-trash"></i> </a>
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

