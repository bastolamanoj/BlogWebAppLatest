@model BlogWebApp.ViewModel.DashboardData;
@using BlogWebApp.Models.IdentityModel
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    Layout = "_AdminLayout";
