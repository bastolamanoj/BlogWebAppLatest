<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        var filterTotalDD = document.querySelector(".filterTotal");

        filterTotalDD.addEventListener("change", function () {
            var val = this.value;
            var selectedUrl = "/dashboard/?month=" + val;
            window.location.href = selectedUrl;
        });

        var urlParams = new URLSearchParams(window.location.search);

        // Get the value of the "param1" parameter
        var monthpara = urlParams.get('month');

        filterTotalDD.value= monthpara;
        
    });

</script>




