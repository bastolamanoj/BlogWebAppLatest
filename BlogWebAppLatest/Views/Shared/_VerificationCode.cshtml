@using BlogWebApp.ViewModel;
@model BlogWebApp.ViewModel.ResetPasswordViewModel;

<div class="row justify-content-center">
    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

        <div class="d-flex justify-content-center py-4">
            <a href="index.html" class="logo d-flex align-items-center w-auto">
                @*    <img src="~/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">NiceAdmin</span> *@
            </a>
        </div><!-- End Logo -->

        <div class="card mb-3">
            <div class="card-body">
                <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Verification Process</h5>
                    @* <p class="text-center small">Enter your username & password to login</p> *@
                </div>

                <form action="/Account/ResetPassword" method="post" class="row g-3 needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                    <div class="col-12">
                        <label asp-for="Code" class="form-label">Verification Code</label>
                        <div class="input-group has-validation">
                            @* <span class="input-group-text" id="inputGroupPrepend"> </span> *@
                            <input asp-for="Code" class="form-control" id="email" required>
                            <span asp-validation-for="Email" class="text-danger invalid-feedback"> </span>

                            <div class="invalid-feedback">Enter Your Verfication Code.</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label asp-for="Email" class="form-label">Email</label>
                        <div class="input-group has-validation">
                            @* <span class="input-group-text" id="inputGroupPrepend"> </span> *@
                            <input asp-for="Email" class="form-control" id="email" required>
                            <span asp-validation-for="Email" class="text-danger invalid-feedback"> </span>

                            <div class="invalid-feedback">Please enter your email address.</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control" required>
                        <div asp-validation-for="Password" class="invalid-feedback"></div>
                    </div>

                    <div class="col-12">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                        <span asp-validation-for="ConfirmPassword" class="invalid-feedback">  </span>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-danger w-100" type="submit">Change </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>
